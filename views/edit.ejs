<%- include('partials/header.ejs') %>

<h1>Edit Blog Page</h1>

<form class="ui form" action="/blogs/<%= blog[0]._id %>?_method=PUT" method="POST">
    <div class="field">
        <label for="title">Title</label>
        <input type="text" name="blog[title]" id="title" value="<%= blog[0].title %> ">
    </div>
    <div class="field">
        <label for="image">Image</label>
        <input type="text" name="blog[image]" id="image" value="<%= blog[0].image %> ">
    </div>
    <div class="field">
        <label for="body">Body</label>
        <textarea name="blog[body]" id="body" rows="5"><%= blog[0].body %> </textarea>
    </div>
    <div>
        <input class="ui purple button" type="submit" value="Confirm">
    </div>
</form>


<%- include('partials/footer.ejs') %>